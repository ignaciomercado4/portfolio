---
const projects = [
  {
    name: 'TimberTech',
    description: 'Web based inventory manager for wood processing companies. Currently used in 2 local companies, working as a SaaS.',
    stack: ['JavaScript', 'Node.js', 'Express.js', 'JWT', 'Handlebars'],
    githubLink: 'https://github.com/ignaciomercado4/timbertech'
  },
  {
    name: 'CashUp',
    description: 'Currency conversion web app. Made following the r/Argentina-programa course to practice async programming.',
    stack: ['JavaScript', 'Cypress.io', 'TailwindCSS'],
    githubLink: 'https://github.com/ignaciomercado4/exchange-house'
  },
  {
    name: 'Notitas',
    description: 'Notes app with user creation and authentication. First real project in the Go programming language.',
    stack: ['Go', 'Gin', 'GORM', 'SQLite', 'JWT'],
    githubLink: 'https://github.com/ignaciomercado4/go-notes-app'
  }
];
---

<section class="animate-section py-12 border-b">
  <h2 class="text-3xl font-semibold text-primary mb-8 text-center">Proyectos</h2>
  
  <div class="grid md:grid-cols-2 gap-6">
    {projects.map(project => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-bold text-secondary mb-3">{project.name}</h3>
        <p class="text-gray-700 mb-4">{project.description}</p>
        <div class="flex flex-wrap gap-2 mb-4">
          {project.stack.map(tech => (
            <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">
              {tech}
            </span>
          ))}
        </div>
        <a 
          href={project.githubLink} 
          target="_blank" 
          class="text-primary hover:underline"
        >
          Ver en GitHub
        </a>
      </div>
    ))}
  </div>
</section>
