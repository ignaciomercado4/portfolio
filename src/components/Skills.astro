---
const technologies = [
    'HTML',
    'CSS',
    'JavaScript',
    'Go',
    'Gin',
    'GORM',
    'Node.js',
    'Express.js',
    'React.js',
    'SQLite',
    'Microsoft SQL Server'
];
---

<section class="animate-section py-12 min-h-[50vh]">
  <h2 class="text-3xl font-semibold text-primary mb-8 text-center">Skills</h2>
  
  <div class="flex flex-wrap justify-center gap-3">
    {technologies.map(tech => (
      <span class="bg-secondary/10 text-secondary px-3 py-1 rounded-full text-sm">
        {tech}
      </span>
    ))}
  </div>
</section>