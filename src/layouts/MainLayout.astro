---
const { title = "Ignacio Mercado" } = Astro.props;
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body class="bg-slate-900 text-gray-900">
    <slot />
    <script>
        import { initScrollAnimations } from '../scripts/scrollAnimation.js';
        initScrollAnimations();
    </script>
</body>
</html>